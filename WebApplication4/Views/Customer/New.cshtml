@model WebApplication4.ViewModels.NewCustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New</h2>

@using (Html.BeginForm("Create", "Customer"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Customers.Name)
        @Html.TextBoxFor(m => m.Customers.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customers.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customers.Payment)
        @Html.TextBoxFor(m => m.Customers.Payment, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customers.Payment)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customers.Date)
        @Html.TextBoxFor(m => m.Customers.Date, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customers.Date)
    </div>


    @Html.HiddenFor(m => m.Customers.Id)

    <button type="submit" class="btn btn-primary">Save</button>

}

