<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-fixed-top navbar-dark bg-dark">
        <a class="navbar-brand" href="#"><img src="~/Content/Images/ser03.png" height="40" width="40" /></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>


        @Html.ActionLink("እድርተኞቹ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })



        <div class="collapse navbar-collapse" id="navbarColor02" style="padding-left:6em">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item" style="padding-left:2em">
                    <a class="nav-link" style="font-size:18px;" href="@Url.Action("Index", "Home")"> <span>Home </span></a>
                </li>
                <li class="nav-item" style="padding-left:2em">
                    <a class="nav-link" style="font-size:18px;" href="@Url.Action("About", "Home")"> <span>About </span></a>
                </li>
                <li class="nav-item" style="padding-left:2em">
                    <a class="nav-link" style="font-size:18px;" href="@Url.Action("Contact", "Home")"><span>Contact </span></a>
                </li>
            </ul>

            @Html.Partial("_LoginPartial")
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
